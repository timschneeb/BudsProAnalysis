                    <View android:id="@+id/focus_view_title" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:contentDescription="@string/app_name" android:layout_toEndOf="@+id/layout_drawer_button" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <com.samsung.accessory.hearablemgr.common.ui.ResponsiveWidthLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true">
                    <com.samsung.accessory.hearablemgr.common.ui.RoundedCornerLayout android:layout_width="match_parent" android:layout_height="match_parent">
                        <com.samsung.accessory.hearablemgr.common.ui.InterceptTouchRecyclerView android:id="@+id/recycler_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:importantForAccessibility="yes"/>
                    </com.samsung.accessory.hearablemgr.common.ui.RoundedCornerLayout>
                </com.samsung.accessory.hearablemgr.common.ui.ResponsiveWidthLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <include layout="@layout/layout_drawer_navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>
